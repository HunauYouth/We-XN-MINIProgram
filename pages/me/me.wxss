/**index.wxss**/
.container {
  background: #F1F1F1;
  min-height: 100vh;
}
.user-header {
  margin: 0;
}

.userinfo {
  margin: 0 auto;
  width: 100%;
}

.userinfo-avatar {
  float: left;
  width: 128rpx;
  height: 128rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.user-feed-back {
  float: left;
  width: 100%;
  height: 400rpx;
  margin: 25rpx auto;
  line-height: 22px;
}
.user-feed-back view {
  font-size: 14px;
}
.user-feed-back image {
  margin-right: 5px;
  vertical-align: middle;
  width:20px;
  height: 20px;
}

.feedback-btn {
  background: #fff;
  border: none;
  width: 100%;
  font-size: 14px;
  font-weight: 210;
  text-align: left;
  height: 34rpx;
  line-height: 42rpx;
  padding-left: 0;
}

.feedback-btn::after {
  border: none;
}

.bind-button {
  margin-top: 300rpx;
  width: 100%;
}

.btn-wrapper button {
  background-color: red;
  width: 85%;
  font-size: 14px;
  font-weight: bold;
  color: #f0f0f0;
}
