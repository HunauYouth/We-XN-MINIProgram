/* pages/index/jy/jy.wxss */

.container {
  min-height: 100vh;
  background-color: #e6e6e6;
}

.borrow-list {
  width: 100%;
  min-height: 100vh;
  margin: 0 auto;
  padding-top: 10rpx;
}

.borrow-item {
  width: 95%;
  margin: 20rpx auto;
  font-size: 32rpx;
  background: #FFFFFF;
  color: #03243a;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
  padding-bottom: 10rpx;
}

.book-name {
  width: 100%;
  min-height: 100rpx;
  line-height: 100rpx;
  font-size: 38rpx;
  font-weight: 500;
  background: #1F6ED4;
  color: #FFFFFF;
  text-align: center;
}

.borrow-date, .back-date, .borrow-status, .borrow-yfje {
  margin: 10rpx auto;
  width: 100%;
  font-size: 28rpx;
  padding-left: 20rpx;
  height: 50rpx;
}

.borrow-yfje {
  color: #C1292E;
}


.warning {
  background-color: red;
}
