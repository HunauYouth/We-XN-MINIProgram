.container {
  background-color: #fefefe;
  width: 100%;
  min-height: 100vh;
  padding-top: 15vh;
}

.df-form {
  width: 90%;
  min-height: 40vh;
  margin: 0 auto;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
}

.form-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  line-height: 100rpx;
  border-top: 1px solid #fafafa;
  border-bottom: 1px solid #fafafa;
  text-align: center;
}

.form-item label {
  width: 30%;
  border-right: 1px solid #fafafa;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.form-item label image {
  width: 48rpx;
  height: 48rpx;
}

.form-item picker {
  width: 70%;
}

.query-button {
  background-color: #1f6ed4;
  border: 1px solid #fff;
  width: 90%;
  margin: 30rpx auto;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
}

.query-button button {
  border: none;
  width: 100%;
  background-color: #1f6ed4;
  color: #f0f0f0;
}

.setAddress button{
  background-color: #1AAD19;  
}