.container {
  width: 100%;
  background-color: #f1f1f1;
  min-height: 100vh;
  display: flex;
  flex-direction: row;
  justify-content: center;
}

.top-layout {
  width: 90%;
  height: 200rpx;
  position: fixed;
  z-index: 999;
  background-color: #fff;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
  display: flex;
  align-items: center;  
  padding-left: 30rpx;
}

.energy-balance-layout {
  display: flex;
  flex-wrap: nowrap;
  justify-content: center;
}

.energy-icon image {
  width: 108rpx;
  height: 108rpx;
}

.energy-data {
  display: flex;
  flex-wrap: wrap;
}

.energy-balance, .energy-price {
  width: 100%;
  padding-left: 50rpx;
  font-size: 42rpx;
  font-weight: 200rpx;
  color: #445252;
}

.warning {
  text-align: center;
  font-size: 60rpx;
  background-color: red;
}

.energy-layout {
  width: 94%;
  padding-top: 240rpx;
}

.energy-table-header {
  width: 100%;
  height: 100rpx;
  background: #118DF0;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  line-height: 100rpx;
  text-align: center;
  color: #FAFAFA;
}

.energy-t-h-date, 
.energy-t-h-energy,
.energy-t-h-balance {
  width: 35%;
}

.energy-t-h-energy {
  border-left: 1px solid #f1f1f1;
  border-right: 1px solid #f1f1f1;
}

.energy-card {
  width: 100%;
  height: 100rpx;
  background-color: #fafafa;
  line-height: 100rpx;
  font-size: 32rpx;
  position: relative;
  display: flex;
  flex-wrap: nowrap;
  text-align: center;
  color: #445252;
}

.card-date, .card-used-energy, .card-balance {
  width: 35%;
  padding-left: 20rpx;
  border: 1px solid #f1f1f1;
}