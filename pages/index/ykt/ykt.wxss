/* pages/index/ykt/ykt.wxss */

.container {
  background-color: #fefefe;
  max-height: 100vh;
  width: 100%;
}

.ykt-layout {
  height: 100vh;
  padding-top: 50rpx;
}

.ykt-form {
  width: 90%;
  margin: 0 auto;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);
}

.form-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-wrap: nowrap;
  line-height: 100rpx;
  border-top: 1px solid #fafafa;
  border-bottom: 1px solid #fafafa;
  text-align: center;
}

.form-item label {
  width: 30%;
  border-right: 1px solid #fafafa;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.form-item label image {
  width: 48rpx;
  height: 48rpx;
}

.form-item picker {
  width: 70%;
}

.query-button, .lose-button {
  background-color: #1F6ED4;
  border: 1px solid #ffffff;
  width: 90%;
  margin: 30rpx auto;
  box-shadow: 0px 10px 40px -10px rgba(0, 64, 128, 0.2);  
}

.query-button button {
  border: none;
  width: 100%;
  background-color: #1F6ED4;
  color: #f0f0f0;  
}

.lose-button {
  background-color: #E8222D;
}

.lose-button button {
  border: none;
  width: 100%;
  background-color: #E8222D;
  color: #f0f0f0;  
}

.input {
  border: 1px solid #cccccc;
  margin-bottom: 20px;
  padding: 5px;
}
