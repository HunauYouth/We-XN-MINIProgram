.department-wrapper {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.phone-item {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #eee;
  width: 95%;
  height: 45px;
  font-size: 18px;
  font-weight: 350;
  margin-top: 10px;
}

.name {
  padding-left: 10px;
}

.department-item {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  background: #fff;
  border-radius: 5px;
  border: 1px solid #eee;
  width: 95%;
  font-size: 18px;
  font-weight: 350;
  margin: 5px auto;
  padding: 5px 0;
}

.dep {
  width: 100%;
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding: 2px 10px 2px 10px;
}

.depth {
  display: flex;
  justify-content: flex-start;
  width: 30%;
  color: #2a333c;
  font-weight: lighter;
}

.deptd {
  display: flex;
  justify-content: flex-start;
  width: 80%;
  font-weight: 300;
}
