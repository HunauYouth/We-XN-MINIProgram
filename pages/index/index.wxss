/* pages/index/index.wxss */

.container {
  width: 100%;
  height: 100vh;
  position: fixed;
}
.swiper-menu {
  height: 185rpx;
  padding: 15rpx 10rpx 10rpx;
}

.swiper-menu .menu-content {
  width: 100%;
  background: #fff;
  min-height: 185rpx;
  border-bottom: 1rpx solid #e5e5e5;
  overflow: hidden;
}

.swiper-menu .menu-content .menu-item {
  float: left;
  width: 20%;
  height: 170rpx;
  font-size: 12px;
  text-align: center;
  font-weight: 500;
  margin: 0rpx auto;
}

.swiper-menu .menu-content .menu-item .menu-item-img {
  width: 75rpx;
  height: 75rpx;
  margin: 15rpx auto;
  border-radius: 35%;
  background: #DADCDB;
  padding: 10rpx;
}

.swiper-menu .menu-content .menu-item .menu-item-img image {
  display: block;
  width: 65rpx;
  height: 65rpx;
  margin: 6rpx auto;
}

.feature-content {
  width: 100%;
}
.feature-content .today-kb, .today-news, .today-borw {
  width: 95%;
  height: 150rpx;
  margin: 20rpx auto;
  background: #EFF1F3;
  border-radius: 10rpx;
  box-shadow: 1px 0px 2px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);
  box-sizing: border-box;
}

.today-kb {
  background: #F46D78;
}

.today-news {
  background: #0B90AA;
}