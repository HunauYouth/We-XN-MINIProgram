/* pages/index/index.wxss */
@import '../tpls/timetables/timetables.wxss';

.container {
  width: 100%;
  height: 100vh;
  background-color: #F1F1F1;
}

.swiper-menu {
  height: 30%;
  /*padding: 15rpx 10rpx 10rpx;*/
  box-shadow: 0px 10rpx 40rpx -10rpx rgba(0, 64, 64, 0.2);
}

.swiper-menu .menu-content {
  width: 100%;
  height: 100%;
  background: #fff;
  overflow: hidden;
}

.weui-grid__label {
  color: #3d3d3b;
  font-weight: 400;
}

.swiper-menu .menu-content .menu-item, .menu-item-disable {
  float: left;
  width: 20%;
  height: 160rpx;
  font-size: 28rpx;
  text-align: center;
  font-weight: 500;
  margin: 0rpx auto;
  color: #223843;
  border: none;
}

.menu-item-disable view.weui-grid__label {
  color: #9c9c9c;
  font-weight: 200;
}

.swiper-menu .menu-content .menu-item .menu-item-img {
  width: 75rpx;
  height: 75rpx;
  margin: 15rpx auto;
  border-radius: 50%;
  background: #d0dfe6;
  padding: 10rpx;
}

.swiper-menu .menu-content .menu-item .menu-item-img image {
  display: block;
  width: 65rpx;
  height: 65rpx;
  margin: 6rpx auto;
}

.weui-grid {
  padding: 40rpx 10rpx;
}

.feature-content {
  width: 100%;
}

.feature-content .today-kb, .today-news, .today-borw {
  width: 95%;
  height: 150rpx;
  margin: 20rpx auto;
  background: #bef7e4;
  border-radius: 10rpx;
  box-shadow: 1px 0px 2px rgba(0, 0, 0, 0.16), 0 3px 6px rgba(0, 0, 0, 0.23);
  box-sizing: border-box;
}

.timetable {
  margin: 30rpx 0;
  box-shadow: 0px 10rpx 40rpx -10rpx rgba(0, 64, 128, 0.2);
}

.timetable-title {
  text-align: center;
  font-size: 40rpx;
  height:80rpx;
  background: #50C1E9;
  line-height: 80rpx;
  color: #FCFCFC;
}

/* 图书借阅  */

.borrow-container {
  margin: 20rpx auto;
  background-color: #FFFFFF;
  box-shadow: 0px 10rpx 40rpx -10rpx rgba(0, 64, 128, 0.2);
}

.borrow-header {
  text-align: center;
  font-size: 40rpx;
  background: #F71E35;
  height: 80rpx;
  line-height: 80rpx;
  color: #FCFCFC;
}

.borrow-main {
  line-height: 60rpx;
  padding: 40rpx;
}

.borrow-item {
  font-size: 28rpx;
  width: 100%;
  overflow: hidden; /*超出部分隐藏*/
  white-space: nowrap; /*不换行*/
  text-overflow: ellipsis; /*超出部分文字以...显示*/
}
