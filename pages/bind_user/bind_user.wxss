.container {
  position: fixed;
  width: 100%;
  height: 100vh;
}

.binduser-header {
  background-color: #fff;
  width: 100%;
  height: 30vh;
  border-bottom: 1px solid #f1f1f1;
}

.binduser-info {
  margin: 0 auto;
  width: 100%;
  text-align: center;
}

.xnqn-logo {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  padding-top: 50rpx;
}

.xnqn-logo image {
  float: left;
  width: 188rpx;
  height: 188rpx;
  border-radius: 50%;
}

.xnqn-des {
  color: green;
  margin-top: 20rpx;
}

.binduser-form-view {
  margin-top: 100rpx;
  width: 100%;
  height: 700rpx;
  font-size: 18px;
  line-height: 20px;
}

.binduser-form-view .stu-number-view, .stu-password-view {
  width: 70%;
  height: 60rpx;
  border-bottom: 1px solid green;
  padding-top: 30rpx;
  margin: 20rpx auto;
}

.form-help {
  width: 70%;
  height: 50rpx;
  line-height: 60rpx;
  margin: 0 auto;
  font-size: 24rpx;
  padding-right: 40rpx;
  display: flex;
  flex-wrap: nowrap;
  justify-content: flex-end;
  align-items: center;
}

.form-help image {
  width: 44rpx;
  height: 44rpx;
}

.stu_info_placeholder {
  color: #333;
}

.form-button-view {
  width: 70%;
  background: #47ad65;
  margin: 10rpx auto;
}

.form-button-view .send-form-button {
  width: 100%;
  background: #47ad65;
  color: #fff;
}

.popup__content {
  width: 500rpx;
  height: 600rpx;
  line-height: 300rpx;
  background: #fff;
  border-radius: 12rpx;
  text-align: center;
}

.help-title {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #364857;
  font-weight: 300;
  font-size: 48rpx;
  border-bottom: 1px solid #2C2C2C;
}

.help-content {
  height: 400rpx;
  font-weight: 200;
  font-size: 32rpx;
}

.help-content .help-list {
  margin: 10rpx 0;
}

.help-content .help-p {
  padding: 20rpx;
}

.help-content .help-p view {
  height: 50rpx;
  line-height: 40rpx;
  text-align: left;
  padding-left: 35rpx;
  font-size: 28rpx;
}